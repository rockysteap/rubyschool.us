
<table class="table">
	<thead>
		<tr>
			<th>Guest name</th>
			<th>Phone</th>
			<th>Datestamp</th>
			<th>Barber</th>
			<th>Color</th>
		</tr>
	</thead>

	<tbody>
		<% @results.each do |row| %>
			<tr>
				<td><%= row['username'] %></td>
				<td><%= row['phone'] %></td>
				<td><%= row['datestamp'] %></td>
				<td><%= row['barber'] %></td>
				<td style="background-color: <%= row['color']  %>"><%= row['color'] %></td>
			</tr>
		<% end %>
	</tbody>
</table>
